<launch>
     <!-- Define paths -->
     <let name="urdf_path" value="$(find-pkg-share mapper_description)/urdf/mapper.urdf.xacro" />
     <let name="rviz_config_path" value="$(find-pkg-share mapper_bringup)/rviz/urdf_config.rviz" />
 
     <!-- Robot state publisher to publish the robot description -->
     <node pkg="robot_state_publisher" exec="robot_state_publisher" name="robot_state_publisher">
         <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
     </node>
 
     <!-- Launch Gazebo with the appropriate world -->
     <include file="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py">
         <arg name="world" value="$(find-pkg-share mapper_bringup)/worlds/test_world.world" />
     </include>
 
     <!-- Spawn the robot in Gazebo -->
     <node pkg="gazebo_ros" exec="spawn_entity.py" args="-topic robot_description -entity mapper" />
 
     <!-- Launch SLAM Toolbox -->
     <include file="$(find-pkg-share slam_toolbox)/launch/online_async_launch.py" />
 
     <!-- Launch EKF localization -->
     <node pkg="robot_localization" exec="ekf_node" name="ekf_filter_node" output="screen">
         <param name="use_sim_time" value="true"/>
         <param name="config_file" value="$(find-pkg-share mapper_bringup)/config/ekf_config.yaml" />
     </node>
 
     <!-- Launch RViz for visualization -->
     <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config_path)" />
 </launch>
 